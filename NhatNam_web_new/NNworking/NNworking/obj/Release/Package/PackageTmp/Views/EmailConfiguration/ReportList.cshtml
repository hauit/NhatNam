
@{
    ViewBag.Title = "Danh sách các báo cáo";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_ReportList>()
    .DataSource(ds => ds.WebApi()
		.RouteName("C222_ReportListApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID);

        columns.AddFor(m => m.Caption);

        columns.AddFor(m => m.Alias);

        columns.AddFor(m => m.QueryStr);

        columns.AddFor(m => m.Note);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)

