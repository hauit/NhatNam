
@{
    ViewBag.Title = "WorkingDay";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_WorkingDay>()
    .DataSource(ds => ds.WebApi()
		.RouteName("C222_WorkingDayApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID).AllowEditing(false);

        columns.AddFor(m => m.Date).Caption("Ngày");

        columns.AddFor(m => m.Status).Caption("Tiêu đề");
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    .OnInitNewRow("onInitNewRow")  
)

<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>