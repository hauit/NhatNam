@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);
    switch (CurrentName)
    {
        case "Login":
            Layout = "~/Views/Shared/Login_Layout/_Login.cshtml";
            break;
        default:
            //Admin layout
            Layout = "~/Views/Shared/Dashboardv_Layout/_Layout.cshtml";
            break;
    }
} 