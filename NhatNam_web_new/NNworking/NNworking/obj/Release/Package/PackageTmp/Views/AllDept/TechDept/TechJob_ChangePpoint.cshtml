
@{
    ViewBag.Title = "Nội dung thay đổi";
}


@(Html.DevExtreme().DataGrid<NNworking.Models.C242_TechJob1>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C242_TechJob1Api")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxTechJob1")
    //.Export(e => e.Enabled(true))
    .Paging(page => page.PageSize(10))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 20, 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("Date")
    )
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    .Columns(columns => {

        columns.AddFor(m => m.ID).AllowEditing(false);

        columns.AddFor(m => m.RequestDept).Caption("Bộ phận yêu cầu");

        columns.AddFor(m => m.ItemCode).Caption("Mã sản phẩm");

        columns.AddFor(m => m.OrderNo).Caption("Order");

        columns.AddFor(m => m.ContentChanged).Caption("Nội dung thay đổi");

        columns.AddFor(m => m.ValidateChange).Caption("Xác nhận thay đổi");

        columns.AddFor(m => m.ApprovedDate).Caption("Áp dụng từ ngày");

        columns.AddFor(m => m.DrawingNo).Caption("Bản vẽ");

        columns.AddFor(m => m.ChangedStaff).Caption("Nhân viên thay đổi");
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    .OnInitNewRow("onInitNewRow")
)

<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>