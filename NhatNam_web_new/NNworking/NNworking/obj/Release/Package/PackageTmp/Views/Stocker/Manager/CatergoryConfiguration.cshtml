
@{
    ViewBag.Title = "CatergoryConfiguration";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_StokerMenu>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C222_StokerMenuApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxCauhinhCatergory")
    .Paging(page => page.PageSize(10))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 10, 20, 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("ID")
    )
    //.Export(e => e.Enabled(true).FileName("DanhMucSanPhamKho").AllowExportSelectedData(true))
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    .Columns(columns => {

        columns.AddFor(m => m.ID);

        columns.AddFor(m => m.CatergoryID).Caption("Danh mục con").Lookup(lup =>
            lup.DataSource(ds => ds.WebApi()
                .RouteName("C222_StokerCatergoryApi")
                .LoadAction("Get")
                .Key("ID")
            )
            .DisplayExpr("Catergory")
            .ValueExpr("ID")
        );

        columns.AddFor(m => m.ParentID).Caption("Danh mục cha").Lookup(lup =>
            lup.DataSource(ds => ds.WebApi()
                .RouteName("C222_StokerCatergoryApi")
                .LoadAction("Get")
                .Key("ID")
            )
            .DisplayExpr("Catergory")
            .ValueExpr("ID")
        );

        columns.AddFor(m => m.Note);
    })
    .Editing(e => e
        .Mode(GridEditMode.Popup)
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    .OnInitNewRow("onInitNewRow")
)

<script>
    function onInitNewRow(e){
        e.data.ID = 0;
    }
</script>