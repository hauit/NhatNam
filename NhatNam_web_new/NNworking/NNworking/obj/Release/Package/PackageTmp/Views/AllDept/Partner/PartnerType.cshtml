
@{
    ViewBag.Title = "PartnerType";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_PartnerType>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C222_PartnerTypeApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxPartnerType")
    .Paging(page => page.PageSize(10))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 10, 20, 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("ID")
    )
    ////.Export(e => e.Enabled(true).FileName("PartnerType").AllowExportSelectedData(true))
    //.Export(e => e.Enabled(true).AllowExportSelectedData(true))
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    .Columns(columns =>
    {

        columns.AddFor(m => m.ID).AllowEditing(false).Caption("ID");

        columns.AddFor(m => m.Note).Caption("Kiểu đối tác");
    })
    .Editing(e => e
        .Mode(GridEditMode.Popup)
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    .OnInitNewRow("onInitNewRow")
)

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_PartnerType>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C222_PartnerTypeApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID);

        columns.AddFor(m => m.Note);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>
