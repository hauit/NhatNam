
@{
    ViewBag.Title = "Công việc hàng ngày phòng cơ điện";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C242_MechanicalElectronicalWork>()
    .DataSource(ds => ds.WebApi()
		.RouteName("C242_MechanicalElectronicalWorkApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxMechanicalElectronical_WorkDaily")
    //.Export(e => e.Enabled(true))
    .Paging(page => page.PageSize(10))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 20, 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("Date")
    )
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    .Columns(columns => {

        columns.AddFor(m => m.ID).AllowEditing(false);

        columns.AddFor(m => m.WorkContent).Caption("Nội dung công việc");

        columns.AddFor(m => m.Nature).Caption("Tính chất");

        columns.AddFor(m => m.RequestDate).Caption("Ngày yêu cầu");

        columns.AddFor(m => m.RequestStaff).Caption("Người yêu cầu");

        columns.AddFor(m => m.RequestDept).Caption("Bộ phận yêu cầu");

        columns.AddFor(m => m.Deadline).Caption("Thời hạn");

        columns.AddFor(m => m.CompleteDate).Caption("Ngày hoàn thành");

        columns.AddFor(m => m.MainPIC).Caption("Người phụ trách");

        columns.AddFor(m => m.Status).Caption("Trạng thái");

        columns.AddFor(m => m.Result).Caption("Kết quả");

        columns.AddFor(m => m.InCompleteReason).Caption("Lí do chưa hoàn thành");

        columns.AddFor(m => m.Note).Caption("Ghi chú");
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    .OnInitNewRow("onInitNewRow")
)


<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>