
@(Html.DevExtreme().DataGrid<NNworking.Models.C242_TrackingViTri>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C242_TrackingViTriApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns =>
    {

        columns.AddFor(m => m.ID).Visible(false);

        columns.AddFor(m => m.DeptCode).Lookup(lup =>
            lup.DataSource(ds => ds.WebApi()
                .RouteName("C242_InventoryReceivedApi")
                .LoadAction("GetAllPartner")
                .Key("Code")
            )
            .DisplayExpr("Name")
            .ValueExpr("Code")
        );

        columns.AddFor(m => m.GiaCode).AllowEditing(false);

        columns.AddFor(m => m.GiaDe);

        columns.AddFor(m => m.Tang);

        columns.AddFor(m => m.Thung);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
        .Mode( GridEditMode.Row)
    )
    .OnInitNewRow("onInitRow")
)

<script>
    function onInitRow(e) {
        e.data.ID = 0;
        e.data.GiaCode = '';
    }
</script>