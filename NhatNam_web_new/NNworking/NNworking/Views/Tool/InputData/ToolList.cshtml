@(Html.DevExtreme().DataGrid<NNworking.Models.C242_Part>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C242_PartApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxDataGridToolList")
    .Paging(page => page.PageSize(30))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("ID")
    )
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    //.HeaderFilter(headFil => headFil.Visible(true))
    .ShowColumnHeaders(true)
    .ShowRowLines(true)
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID);

        columns.AddFor(m => m.PartNo);

        columns.AddFor(m => m.PartName);

        columns.AddFor(m => m.CustomerID);

        columns.AddFor(m => m.SupplierID);

        columns.AddFor(m => m.UpQty);

        columns.AddFor(m => m.CatID);

        columns.AddFor(m => m.Unit);

        columns.AddFor(m => m.IsTool);

        columns.AddFor(m => m.GiaThanh);

        columns.AddFor(m => m.Deleted);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    .OnInitNewRow("OnInitNewRow")
)
<script>
    function OnInitNewRow(e) {
        e.data.ID = 0;
        e.data.UpQty = 0;
        e.data.IsTool = false;
        e.data.CatID = 0;
    }
</script>