
@{
    ViewBag.Title = "NotificationSendingEmail";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_NotificationSendingEmail>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C222_NotificationSendingEmailApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxDataGridSendingEmail")
    .Paging(page => page.PageSize(10))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 10, 20, 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("ID")
    )
    .OnExporting("onExportingDatagridToExcel").Export(e => e.Enabled(true)
        //.FileName("SendingEmail")
        .AllowExportSelectedData(true))
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    .Columns(columns =>
    {

        columns.AddFor(m => m.ID).AllowEditing(false);

        columns.AddFor(m => m.Email).Lookup(lup =>
            lup.DataSource(ds => ds.WebApi()
                .RouteName("C222_NotificationEmailApi")
                .LoadAction("Get")
            )
            .DisplayExpr("Email")
            .ValueExpr("Email")
        );//1

        columns.AddFor(m => m.FunctionSTT).Lookup(lup =>
            lup.DataSource(ds => ds.WebApi()
                .RouteName("C222_NotificationFunctionListApi")
                .LoadAction("Get")
            )
            .DisplayExpr("Name")
            .ValueExpr("STT")
        );//1

        columns.AddFor(m => m.SendType);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
        .Mode(GridEditMode.Popup)
    )
    .OnInitNewRow("onInitNewRow")
)

<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>