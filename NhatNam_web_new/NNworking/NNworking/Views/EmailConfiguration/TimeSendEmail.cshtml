
@{
    ViewBag.Title = "Cấu hình thời gian gửi mail";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_Notification_DataTime>()
    .DataSource(ds => ds.WebApi()
		.RouteName("C222_Notification_DataTimeApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Note);

        columns.AddFor(m => m.Days);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)

