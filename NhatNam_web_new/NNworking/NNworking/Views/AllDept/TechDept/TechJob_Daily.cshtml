
@{
    ViewBag.Title = "Công việc hàng ngày";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C242_TechJob2>()
        .DataSource(ds => ds.WebApi()
            .RouteName("C242_TechJob2Api")
            .LoadAction("Get")
            .InsertAction("Post")
            .UpdateAction("Put")
            .DeleteAction("Delete")
            .Key("ID")
        )
        .ID("dxTechJob2")
        //.OnExporting("onExportingDatagridToExcel").Export(e => e.Enabled(true))
        .Paging(page => page.PageSize(10))
        .Pager(pager => pager.ShowPageSizeSelector(true)
            .ShowInfo(true)
            .AllowedPageSizes(new List<int> { 20, 30, 50, 100, 200 })
        )
        .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
            .DescendingText("Date")
        )
        .ColumnAutoWidth(true)
        .FilterRow(fil => fil.Visible(true))
        .FilterPanel(fi => fi.Visible(true))
        .SearchPanel(search => search.Visible(true)
            .HighlightSearchText(true)
            .Width(500)
        )
        .Columns(columns =>
        {

            columns.AddFor(m => m.ID).AllowEditing(false);

            columns.AddFor(m => m.RequestDept).Caption("Bộ phận yêu cầu");

            columns.AddFor(m => m.JobContent).Caption("Nội dung công việc");

            columns.AddFor(m => m.WorkDes).Caption("Công việc");

            columns.AddFor(m => m.CompletedPercen).Caption("Mức độ hoàn thành");

            columns.AddFor(m => m.Deadline).Caption("Thời hạn dự kiến").Format("dd/MM/yyyy");

            columns.AddFor(m => m.Note).Caption("Ghi chú");
        })
        .Editing(e => e
            .AllowAdding(true)
            .AllowUpdating(true)
            .AllowDeleting(true)
        )
        .OnInitNewRow("onInitNewRow")
)

<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>
