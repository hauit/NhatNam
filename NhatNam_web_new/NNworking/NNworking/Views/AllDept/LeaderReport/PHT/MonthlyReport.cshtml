
@{
    ViewBag.Title = "Báo cáo tháng";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_LeaderMonthlyInput>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C222_LeaderMonthlyInputApi")
        .LoadAction("GetPHT")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxLeaderMonthlyInput")
    //.OnExporting("onExportingDatagridToExcel").Export(e => e.Enabled(true))
    .Paging(page => page.PageSize(10))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 20, 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("Date")
    )
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    .Columns(columns => {

        columns.AddFor(m => m.ID).AllowEditing(false);

        columns.AddFor(m => m.Date).AllowEditing(false).Caption("Ngày");

        columns.AddFor(m => m.Month).AllowEditing(false).Caption("Tháng");

        columns.AddFor(m => m.DeptCode).Caption("Mã bộ phận");

        columns.AddFor(m => m.InputStaff).Visible(false).Caption("Người nhập");

        columns.AddFor(m => m.ReciveQty).Caption("SL vào HT");

        columns.AddFor(m => m.CompleteQty).Caption("SL vào Kho");

        columns.AddFor(m => m.IncompleteQty).Caption("SL tồn");

        columns.AddFor(m => m.ErrorRate).Caption("Tỉ lệ lỗi");

        columns.AddFor(m => m.MachineCapa).Caption("Năng suất NV");

        columns.AddFor(m => m.CriticalIssue).Caption("Vấn đề nổi cộm");

        columns.AddFor(m => m.IncompleteIssue).Caption("Vấn đề tồn đọng");

        columns.AddFor(m => m.KaizenApplied).Caption("Cải tiến");
    })
    .Editing(e => e
        //.AllowAdding(true)
        .AllowUpdating(true)
        //.AllowDeleting(true)
        .Mode(GridEditMode.Form)
    )
    .OnInitNewRow("onInitNewRow")
)

<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>