
@{
    ViewBag.Title = "Báo cáo hàng ngày";
}

<h2>DailyReport</h2>
@(Html.DevExtreme().DataGrid<NNworking.Models.C222_LeaderDailyInput>()
    .DataSource(ds => ds.WebApi()
        .RouteName("C222_LeaderDailyInputApi")
        .LoadAction("GetPHT")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .ID("dxLeaderDailyInput")
    //.OnExporting("onExportingDatagridToExcel").Export(e => e.Enabled(true))
    .Paging(page => page.PageSize(10))
    .Pager(pager => pager.ShowPageSizeSelector(true)
        .ShowInfo(true)
        .AllowedPageSizes(new List<int> { 20, 30, 50, 100, 200 })
    )
    .Sorting(sort => sort.Mode(GridSortingMode.Multiple)
        .DescendingText("Date")
    )
    .ColumnAutoWidth(true)
    .FilterRow(fil => fil.Visible(true))
    .FilterPanel(fi => fi.Visible(true))
    .SearchPanel(search => search.Visible(true)
        .HighlightSearchText(true)
        .Width(500)
    )
    .Columns(columns => {

        columns.AddFor(m => m.ID).AllowEditing(false);

        columns.AddFor(m => m.Date).Caption("Ngày");

        columns.AddFor(m => m.DeptCode).Caption("Mã bộ phận");

        columns.AddFor(m => m.InputStaff).Visible(false).Caption("Người nhập");

        columns.AddFor(m => m.WorkingEmployee).Caption("Nhân sự");

        columns.AddFor(m => m.NeedQty).Caption("Hàng cần");

        columns.AddFor(m => m.FinishQty).Caption("Hàng đáp ứng");

        columns.AddFor(m => m.FaultyProduct).Caption("Hàng lỗi");
    })
    .Editing(e => e
        //.AllowAdding(true)
        .AllowUpdating(true)
        //.AllowDeleting(true)
        .Mode(GridEditMode.Popup)
    )
    .OnInitNewRow("onInitNewRow")
)

<script>
    function onInitNewRow(e) {
        e.data.ID = 0;
    }
</script>