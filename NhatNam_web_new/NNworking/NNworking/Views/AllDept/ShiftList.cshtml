
@{
    ViewBag.Title = "Danh sách ca làm việc";
}

@(Html.DevExtreme().DataGrid<NNworking.Models.C222_Shift>()
    .DataSource(ds => ds.WebApi()
		.RouteName("C222_ShiftApi")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("ID")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.ID).AllowEditing(false);

        columns.AddFor(m => m.Shift);

        columns.AddFor(m => m.Description);

        columns.AddFor(m => m.Time);

        columns.AddFor(m => m.Milk);

        columns.AddFor(m => m.StartTime).DataType(GridColumnDataType.DateTime).Format("dd/MM/yyyy HH:mm:ss");

        columns.AddFor(m => m.FinishTime).DataType(GridColumnDataType.DateTime).Format("dd/MM/yyyy HH:mm:ss");
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
    .OnInitNewRow("OnInitRow")
)

<script>
    function OnInitRow(e) {
        e.data.ID = 0;
    }
</script>