@{
    ViewBag.Title = "ChanPass";
    Layout = "~/Views/Shared/Dashboardv_Layout/_Layout.cshtml";
}

<h2>Đổi mật khẩu</h2>
@using (Html.BeginForm("ChangePass", "Login", FormMethod.Post, new { @name="frm", @id = "frm" }))
{
    <table>
        <tr>
            <td><span>Mật khẩu cũ</span></td>
            <td>@Html.Password("OldPass") </td>
        </tr>
        <tr>
            <td><span>Mật khẩu mới:</span></td>
            <td>@Html.Password("NewPass") </td>
        </tr>
        <tr>
            <td><span>Xác nhận mật khẩu mới:</span></td>
            <td>@Html.Password("NewPassConfirm")</td>
        </tr>
    </table>
    <input id="Submit" type="Button" value="Đổi mật khẩu" onclick ="CheckPass()"/>
}
